{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		
		<div class="col-md-6 col-md-offset-3">
			
		<div class="panel panel-success ">
			<div class="panel-heading"><center> <h4><span class="glyphicon glyphicon-credit-card"></span><strong> Change Password </strong></h4></center> </div>

			<div class="panel-body">
				<!-- {% if errors%}
				{{ errors | json_encode }}
				{% endif %} -->
				<form action="{{ path_for('auth.password.change')}}" method="POST" autocomplete="off">

			<div class="form-group{{ errors.password_old ? ' has-error' : ''}}">
					<label for="password_old" style="color: black"><span class="glyphicon glyphicon-eye-open"></span> Current Password</label>
					<input type="password" name="password_old" id="password_old" placeholder="Your Password " class="form-control">
				{% if errors.password_old %}
					<span class="help-block">{{ errors.password_old | first }}</span>
				{% endif %}					
				</div>					

				<div class="form-group{{ errors.password ? ' has-error' : ''}}">
					<label for="password" style="color: black"><span class="glyphicon glyphicon-eye-close"></span> Password</label>
					<input type="password" name="password" id="password" placeholder="New Password" class="form-control">
				{% if errors.password %}
					<span class="help-block">{{ errors.password | first }}</span>
				{% endif %}					
				</div>	
				
				<button type="submit" class="btn btn-group-justified btn-info"><span class="glyphicon glyphicon-edit"></span> Change Password</button>

				{{ csrf.field | raw }}

				</form>
			</div>

		</div>

		</div>

	</div>	 

{% endblock %}
