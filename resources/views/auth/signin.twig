{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		
		<div class="col-md-6 col-md-offset-3">
			
		<div class="panel panel-success ">
			<div class="panel-heading"><center> <h4><span class="glyphicon glyphicon-open"></span><strong> Sign In </strong></h4></center> </div>

			<div class="panel-body">
				<!-- {% if errors%}
				{{ errors | json_encode }}
				{% endif %} -->
				<form action="{{ path_for('auth.signin')}}" method="POST" autocomplete="off">
					
				<div class="form-group{{ errors.email ? ' has-error' : ''}}" >
					<label for="email" style="color: black"><span class="glyphicon glyphicon-info-sign"></span> Email</label>
					<input type="email" name="email" id="email" placeholder="example : you@domain.com" class="form-control" value="{{ old.email }}" >
					{% if errors.email%}
					<span class="help-block">{{ errors.email | first }}</span>
					{% endif %}
				</div>


				<div class="form-group{{ errors.password ? ' has-error' : ''}}">
					<label for="password" style="color: black"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
					<input type="password" name="password" id="password" placeholder="Your Password" class="form-control">
				{% if errors.password %}
					<span class="help-block">{{ errors.password | first }}</span>
				{% endif %}					
				</div>	
				
				<button type="submit" class="btn btn-group-justified btn-info"><span class="glyphicon glyphicon-check"></span>  Sign In</button>

				{{ csrf.field | raw }}

				</form>
			</div>

		</div>

		</div>

	</div>	 

{% endblock %}
