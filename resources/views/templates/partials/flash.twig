{% if flash.getMessage('info') %}

	<div class="alert alert-info alert-dismissible" role="alert">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  <strong><span class="glyphicon glyphicon-bullhorn"></span> 
		{{ flash.getMessage('info') | first }}
	  </strong> 
	</div>


{% endif %}


{% if flash.getMessage('error') %}

	<div class="alert alert-danger alert-dismissible" role="alert">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  <strong><i class="material-icons">error_outline</i></span> 
		{{ flash.getMessage('error') | first }}
		
	  </strong> 
	</div>

{% endif %}